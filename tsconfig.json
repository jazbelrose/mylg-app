{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "**/__tests__/**", "dist", "build"]
}
